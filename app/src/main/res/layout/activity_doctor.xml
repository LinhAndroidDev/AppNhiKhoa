<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.giaodien.DoctorActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarDoctor"
        app:title="Đặt Lịch"
        app:titleTextColor="@color/white"
        android:background="@drawable/bg_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F1F1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="#FFFFFF"
                android:padding="10dp">
                <RelativeLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/boder"
                    android:layout_marginRight="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/anh"
                        android:padding="3dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        />
                    <ImageView
                        android:background="@drawable/fsf"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginTop="55dp"
                        android:layout_marginRight="3dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tenKhoaPhong"
                    android:layout_toRightOf="@+id/linearLayout"
                    android:text="PHONG KHAM CK NHI"
                    android:textSize="20dp"
                    android:textColor="#111"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tenBacsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tenKhoaPhong"
                    android:layout_toRightOf="@+id/linearLayout"
                    android:text="TS.BS Hùng"
                    android:textColor="#111"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/diaChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tenBacsi"
                    android:layout_toRightOf="@+id/linearLayout"
                    android:text="55 phố 8/3 Hà Nội"
                    android:textSize="18dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/datLich"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:padding="7dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_datlich" />
                    <TextView
                        android:text="ĐẶT LỊCH"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/nhanTin"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:padding="7dp">
                    <ImageView
                        android:src="@drawable/icon_tinnhan"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:text="NHẮN TIN"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

